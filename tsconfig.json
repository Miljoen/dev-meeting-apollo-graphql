{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": [
            "es2019"
        ],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": ".",
        "importHelpers": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*.ts",
        "./prisma/**/*"
    ],
    "exclude": ["node_modules"]
}